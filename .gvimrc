"------------------------------------------------
" Display
"------------------------------------------------
set guifont=Ricty\ for\ Powerline\ Bold\ 13
set antialias
set sessionoptions+=resize
set lines=40
set columns=75
set guioptions-=T
set guioptions-=m
set guicursor=a:blinkon0
set cmdheight=1
set previewheight=5
set splitbelow
set splitright
set showtabline=2
nnoremap <C-Tab>   gt
nnoremap <C-S-Tab> gT
set clipboard=unnamedplus,autoselect
